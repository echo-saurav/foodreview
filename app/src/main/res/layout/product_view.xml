        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/profile_id"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/view2"

                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="3sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="3sp"
                    android:innerRadius="0dp"
                    android:padding="3sp"
                    android:shape="ring"
                    android:thicknessRatio="1.9"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:transitionName="userImage"
                        android:id="@+id/user_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profile_icon" />
                </androidx.cardview.widget.CardView>


                <TextView
                    android:paddingEnd="100dp"
                    android:fontFamily="@font/sulphur_point_bold"
                    android:textColor="@android:color/black"
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    tools:text="profile"
                    android:maxLines="1"
                    android:textSize="17sp"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/more_option"
                android:background="@drawable/ripple"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/more_icon"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3sp"
            android:layout_marginBottom="3sp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/products_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="3sp"
                android:background="@drawable/button_ripple"
                android:padding="7sp"
                tools:text="text"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_marginEnd="3sp"
                android:background="@drawable/button_ripple"
                android:padding="7sp"
                tools:text="text"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginBottom="7sp"
            android:drawableStart="@drawable/location_icon"
            android:drawableTint="@color/grey"
            tools:text="text" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="400sp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:weightSum="3">

            <ImageView
                android:id="@+id/love_image"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_weight="1"
                android:src="@drawable/love_off"
                android:tint="@color/colorAccent" />

            <ImageView
                android:id="@+id/comment_image"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_weight="1"
                android:src="@drawable/comment_icon"
                android:tint="@color/colorPrimary" />

<!--            <ImageView-->
<!--                android:id="@+id/save_image"-->
<!--                android:layout_width="30sp"-->
<!--                android:layout_height="30sp"-->
<!--                android:layout_weight="1"-->
<!--                android:src="@drawable/save_icon"-->
<!--                android:tint="@color/colorPrimary" />-->

        </LinearLayout>
        <TextView
            android:id="@+id/likes_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3sp"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <TextView
            android:textColor="@android:color/black"
            android:id="@+id/products_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3sp"
            tools:text="text"
            android:textSize="17sp" />

        <TextView
            android:textColor="@android:color/black"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3sp"
            android:text="All Comments"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:textColor="@android:color/black"
            android:id="@+id/top_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3sp"
            android:text=""
            android:textSize="17sp" />


        <TextView
            android:textColor="@android:color/black"
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3sp"
            android:drawableStart="@drawable/time_icon"
            android:drawableTint="@color/grey"
            tools:text="text"
            android:textSize="13sp"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3sp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="3sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="3sp"
                android:innerRadius="0dp"
                android:padding="3sp"
                android:shape="ring"
                android:thicknessRatio="1.9"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/profile_picture"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_marginStart="3sp"
                    android:src="@mipmap/icon" />
            </androidx.cardview.widget.CardView>


            <EditText
                android:maxLines="1"
                android:inputType="text"
                android:id="@+id/new_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3sp"
                android:layout_marginEnd="3sp"
                android:background="@null"
                android:hint="add your comment..."
                android:padding="7sp"
                android:textSize="17sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="3sp"
            android:background="@color/black" />

    </LinearLayout>

</ScrollView>